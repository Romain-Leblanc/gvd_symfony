{% extends 'base_admin.html.twig' %}

{% block title %}Modification utilisateur{% endblock %}

{% block body %}
    <div class="d-flex flex-column gap-4">
        <div class="d-flex justify-content-center align-items-center">
            <h6 class="mb-0 text-primary text-decoration-underline">Utilisateur n°{{ formModificationUtilisateur.vars.value.getId }}</h6>
        </div>
        {% if errors is defined %}
            {% for error in errors %}
                <div class="alert alert-danger" role="alert">{{ error.message|nl2br }}</div>
            {% endfor %}
        {% endif %}
        {% if formModificationUtilisateur.vars.value.getId == app.user.id %}
            <div class="alert alert-warning" role="alert">Vous serez obligé de vous reconnecter après la validation de la modification.</div>
        {% endif %}
        <div class="div-form">
            {{ form_start(formModificationUtilisateur) }}
            <div class="d-flex flex-column gap-3">
                <div class="row">
                    {{ form_label(formModificationUtilisateur.nom) }}
                    <div class="col-lg-5 col-md-6 row mx-0">
                        {{ form_widget(formModificationUtilisateur.nom) }}
                    </div>
                </div>
                <div class="row">
                    {{ form_label(formModificationUtilisateur.prenom) }}
                    <div class="col-lg-5 col-md-6 row mx-0">
                        {{ form_widget(formModificationUtilisateur.prenom) }}
                    </div>
                </div>
                <div class="row">
                    {{ form_label(formModificationUtilisateur.email) }}
                    <div class="col-lg-5 col-md-6 row mx-0">
                        {{ form_widget(formModificationUtilisateur.email) }}
                    </div>
                </div>
                <div class="row">
                    {{ form_label(formModificationUtilisateur.password) }}
                    <div class="col-lg-5 col-md-6 row mx-0">
                        {{ form_widget(formModificationUtilisateur.password) }}
                    </div>
                </div>
                <div class="row">
                    {{ form_label(formModificationUtilisateur.roles) }}
                    <div class="col-lg-5 col-md-6 row mx-0">
                        {% if "ROLE_ADMIN" in formModificationUtilisateur.roles.vars.value %}
                            {{ form_widget(formModificationUtilisateur.roles, { 'value': "ROLE_ADMIN" }) }}
                        {% else %}
                            {{ form_widget(formModificationUtilisateur.roles, { 'value': "ROLE_USER" }) }}
                        {% endif %}
                    </div>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <button class="btn btn-success fs-14" type="submit">Valider</button>
                </div>
            </div>
            {{ form_end(formModificationUtilisateur) }}
        </div>
    </div>
{% endblock %}