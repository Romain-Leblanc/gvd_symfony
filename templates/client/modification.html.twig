{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <div class="div-liste">
        <div id="div-tab">
            {% if errors is defined %}
                {% for error in errors %}
                    <div class="alert alert-danger" role="alert">{{ error.message|nl2br }}</div>
                {% endfor %}
            {% endif %}
            {{ form_start(formModificationClient) }}
            <div class="div-detail mb-3">
                {{ form_label(formModificationClient.nom) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formModificationClient.nom) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formModificationClient.prenom) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formModificationClient.prenom) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formModificationClient.tel) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formModificationClient.tel) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formModificationClient.email) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formModificationClient.email) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formModificationClient.adresse) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formModificationClient.adresse) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formModificationClient.suite_adresse) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formModificationClient.suite_adresse) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formModificationClient.code_postal) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formModificationClient.code_postal) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formModificationClient.ville) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formModificationClient.ville) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formModificationClient.num_tva) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formModificationClient.num_tva) }}
                </div>
            </div>
        </div>
        <div class="div-envoi-form">
            <button type="submit" class="btn btn-success">Valider</button>
        </div>
        {{ form_end(formModificationClient) }}
    </div>
{% endblock %}