{% extends 'base.html.twig' %}

{% block title %}Interventions{% endblock %}

{% block body %}
    <div class="div-liste">
        <div class="div-boutons mb-3">
            <a href="{{ path('intervention_ajouter') }}" class="btn btn-success" id="bouton-ajouter"><i class="fa-solid fa-plus"></i> Ajouter</a>
            {# La valeur pour la route suivant change au clic sur un bouton radio du tableau #}
            <a href="{{ path('intervention_modifier') }}" class="btn btn-primary cacher" id="bouton-modifier"><i class="fa-solid fa-pen-to-square"></i> Modifier</a>
        </div>
        <div class="div-table">
            <table class="table table-hover table-bordered align-middle text-center">
                <thead class="thead-light align-middle">
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">NÂ° inter.</th>
                        <th scope="col">Date intervention</th>
                        <th scope="col">Voiture</th>
                        <th scope="col">Client</th>
                        <th scope="col">Montant HT</th>
                    </tr>
                </thead>
                <tbody>
                {% for uneIntervention in lesInterventions %}
                    <tr>
                        <td id="radio-button-table">
                            <input type="radio" class="form-check-input" id="radio-input" name="radio-input" />
                        </td>
                        <td data-label="id_intervention">{{ uneIntervention.id }}</td>
                        <td data-label="date_intervention">{{ dateEnFrancais(uneIntervention.getDateIntervention) }}</td>
                        <td data-label="vehicule">{{ marqueModele(uneIntervention.getFKVehicule.getFKMarque.getMarque,uneIntervention.getFKVehicule.getFKModele.getModele) }}</td>
                        <td data-label="client">{{ nomPrenom(uneIntervention.getFKClient.getNom,uneIntervention.getFKClient.getPrenom) }}</td>
                        <td data-label="montant_ht">{{ formatMontantEuros(uneIntervention.getMontantHT) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-end fw-bold mt-2">
            <p class="mb-0">{{ lesInterventions|length}} intervention{{ affichagePlusieursValeurs(lesInterventions|length) }}</p>
        </div>
    </div>
{% endblock %}
