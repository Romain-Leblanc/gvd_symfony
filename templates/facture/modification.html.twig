{% extends 'base.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
    <div class="div-liste">
        <div id="div-tab">
            {% if errors is defined %}
                {% for error in errors %}
                    <div class="alert alert-danger" role="alert">{{ error.message|nl2br }}</div>
                {% endfor %}
            {% endif %}
            {{ form_start(formModificationFacture) }}
            <div class="div-detail mb-3">
                <label for="date_facture" class="text-center col-md-5 col-form-label">Date facture :</label>
                <div class="col-lg-5 col-md-6">
                    <input type="date" id="date_facture" name="date_facture" class="form-control input-50" disabled value="{{ formModificationFacture.date_facture.vars.value|date('Y-m-d') }}">
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formModificationFacture.fk_client) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formModificationFacture.fk_client) }}
                </div>
            </div>
{#            {{ dump(formModificationFacture.client_id) }}#}
            <div class="div-detail mb-3">
                {{ form_label(formModificationFacture.fk_taux) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formModificationFacture.fk_taux) }}
                </div>
            </div>
            <div id="tab-fact-ajout" class="mb-3">
                <table class="table text-center align-middle" id="table-interventions">
                    <thead class="thead-light align-middle">
                    <tr>
                        <th width="15%" scope="col">Date</th>
                        <th width="20%" scope="col">Voiture</th>
                        <th width="35%" scope="col">Détail intervention</th>
                        <th width="10%" scope="col">Durée</th>
                        <th width="20%" scope="col">Montant HT</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for uneIntervention in listeInterventions %}
                            <tr class="tr-table-fact" id="tr-tab">
                                <td width="15%" scope="row" class="align-middle" id="td-date-intervention">{{ uneIntervention.getDateIntervention|date('d/m/Y') }}</td>
                                <td width="20%" scope="row" class="align-middle" id="td-infos-vehicule">{{ marqueModele(uneIntervention.getFKVehicule.getFKMarque.getMarque,uneIntervention.getFKVehicule.getFKModele.getModele) }}</td>
                                <td width="35%" scope="row" class="align-middle" id="td-detail-intervention">{{ uneIntervention.getDetailIntervention|nl2br }}</td>
                                <td width="10%" scope="row" class="align-middle" id="td-duree-intervention">{{ dureeIntervention(uneIntervention.getDureeIntervention) }}</td>
                                <td width="20%" scope="row" class="align-middle" id="td-montant-ht">{{ formatMontantEuros(uneIntervention.getMontantHT) }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="div-row mb-3 gap-0">
                <div class="div-column mb-3">
                    <div class="div-paiement mb-3 div-column-responsive">
                        {{ form_label(formModificationFacture.fk_moyen_paiement) }}
                        {{ form_widget(formModificationFacture.fk_moyen_paiement) }}
                    </div>
                    <div class="div-paiement mb-3 div-column-responsive">
                        {{ form_label(formModificationFacture.date_paiement) }}
                        {{ form_widget(formModificationFacture.date_paiement) }}
                    </div>
                </div>
                <div class="div-column mb-3">
                    <div class="div-total mb-3 div-column-responsive justify-content-end">
                        <div class="div-titre-montant">
                            <p class="p-montant">Montant HT :</p>
                        </div>
                        <div class="div-p-montant">
                            <p id="total-ht" class="p-montant">{{ formatMontantEuros(formModificationFacture.montant_ht.vars.value) }}</p>
                        </div>
                    </div>
                    <div class="div-total mb-3 div-column-responsive justify-content-end">
                        <div class="div-titre-montant">
                            <p class="p-montant">Montant TVA :</p>
                        </div>
                        <div class="div-p-montant">
                            <p id="total-tva" class="p-montant">{{ formatMontantEuros(formModificationFacture.montant_tva.vars.value) }}</p>
                        </div>
                    </div>
                    <div class="div-total mb-3 div-column-responsive justify-content-end">
                        <div class="div-titre-montant">
                            <p class="p-montant">Montant TTC :</p>
                        </div>
                        <div class="div-p-montant">
                            <p id="total-ttc" class="p-montant">{{ formatMontantEuros(formModificationFacture.montant_ttc.vars.value) }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="div-envoi-form">
            <button id="btn-submit" type="submit" class="btn btn-success">Valider</button>
        </div>
        {{ form_end(formModificationFacture) }}
    </div>
{% endblock %}