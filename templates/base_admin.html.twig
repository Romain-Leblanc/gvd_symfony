<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %} - G.V.D</title>
    {% block stylesheets %}
    {{ encore_entry_link_tags('admin') }}
    {{ encore_entry_link_tags('bootstrap') }}
    {{ encore_entry_link_tags('fontawesome') }}
    {{ encore_entry_link_tags('select2-style') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('jquery') }}
    {{ encore_entry_script_tags('select2') }}
    {{ encore_entry_script_tags('select2-fr') }}
    {{ encore_entry_script_tags('functions') }}
    {% endblock %}
</head>
<body class="bg-admin">
    <nav>
        <div class="d-flex align-items-center justify-content-between gap-3 flex-wrap">
            <div class="d-flex align-items-center justify-content-start gap-3">
                <a class="btn btn-link" href="{{ path('intervention_index') }}">Lien application</a>
            </div>
            <div class="d-flex align-items-center justify-content-end gap-0">
                <a class="btn btn-link" href="{{ path('app_deconnexion') }}">Déconnexion</a>
                <p class="px-3 mb-0">{{ nomPrenom(app.user.nom, app.user.prenom) }}</p>
            </div>
        </div>
    </nav>
    <div class="container my-2 flex-1">
        <div class="d-flex align-items-center flex-column">
            <img id="logo-admin" src="{{ asset('images/logo_cercle.png') }}" alt="logo">
            <h5 id="titre-admin" class="mt-2 p-2">Administration</h5>
            <div class="d-flex justify-content-center align-items-center gap-2 flex-wrap">
                <a class="mt-3 fs-14 btn btn-outline-primary {{ menuActif(app.request.attributes.get('_route'), "utilisateur") }}" href="{{ path('utilisateur_admin_index') }}">Utilisateurs</a>
                <a class="mt-3 fs-14 btn btn-outline-primary {{ menuActif(app.request.attributes.get('_route'), "marque") }}" href="{{ path('marque_admin_index') }}">Marques</a>
                <a class="mt-3 fs-14 btn btn-outline-primary {{ menuActif(app.request.attributes.get('_route'), "modele") }}" href="{{ path('modele_admin_index') }}">Modèles</a>
                <a class="mt-3 fs-14 btn btn-outline-primary {{ menuActif(app.request.attributes.get('_route'), "facture") }}" href="{{ path('facture_admin_index') }}">Factures</a>
            </div>
        </div>
        <div class="w-100 mt-5 d-flex flex-column">
            {% block body %}{% endblock %}
        </div>
    </div>
</body>
</html>